<div class="container">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<%= form_for (@user) do |f| %>
			<table class="table table-bordered">
				<h3>登録情報の編集</h3>
				<tbody>
					<tr>
						<td><%= f.label :お名前 %></td>
						<td><%= f.text_field :last_name, placeholder: "姓を入力", autofocus: true, class: "col-xs-6" %>
							<%= f.text_field :first_name, placeholder: "名を入力", class: "col-xs-6" %>
						</td>
					</tr>
					<tr>
						<td><%= f.label :"お名前 (カナ)" %></td>
						<td><%= f.text_field :last_name_kana, placeholder: "姓(カナ)を入力", class: "col-xs-6" %>
							<%= f.text_field :first_name_kana, placeholder: "名(カナ)を入力", class: "col-xs-6" %>
						</td>
					</tr>
					<tr>
						<td><%= f.label :"ニックネーム(フリマ内で使用)" %></td>
						<td><%= f.text_field :nickname, placeholder: "ニックネームを入力", class: "col-xs-6" %></td>
					</tr>
					<tr>
						<td><%= f.label :"郵便番号(ハイフンなし7桁)" %></td>
						<td><%= f.text_field :postcode, placeholder: "郵便番号(ハイフンなし7桁)を入力", class: "col-xs-12" %></td>
					</tr>
					<tr>
						<td><%= f.label :"都道府県" %></td>
						<td><%= f.text_field :prefecture_code, placeholder: "都道府県を入力", class: "col-xs-12" %></td>
					</tr>
					<tr>
						<td><%= f.label :"市区町村" %></td>
						<td><%= f.text_field :address_city, placeholder: "市区町村を入力", class: "col-xs-12" %></td>
					</tr>
					<tr>
						<td><%= f.label :"番地" %></td>
						<td><%= f.text_field :address_street, placeholder: "番地を入力", class: "col-xs-12" %></td>
					</tr>
					<tr>
						<td><%= f.label :"建物名 (任意)" %></td>
						<td><%= f.text_field :address_building, placeholder: "建物名 (任意)を入力", class: "col-xs-12" %></td>
					</tr>
					<tr>
						<td><%= f.label :"電話番号" %></td>
						<td><%= f.text_field :phone_number, placeholder: "電話番号を入力", class: "col-xs-12" %></td>
					</tr>
					<tr>
						<td><%= f.label :"プロフィール写真" %></td>
						<td><%= f.file_field :image, class: "col-xs-12" %></td>
					</tr>
					<tr>
						<td><%= f.label :"自己紹介" %></td>
						<td><%= f.text_field :introduction, placeholder: "自己紹介文を入力", class: "col-xs-12", :style=>"height: 100px;" %></td>
					</tr>
				</tbody>
			</table>
			<table class="table table-bordered">
				<tbody>
					<tr>
						<td><%= f.label :"銀行名" %></td>
						<td><%= f.text_field :bank_name, placeholder: "銀行名を入力", class: "col-xs-6" %></td>
						<td><%= f.label :"口座種別" %></td>
						<td><%= f.text_field :account_type, placeholder: "口座種別を入力", class: "col-xs-6" %></td>
					</tr>
					<tr>
						<td><%= f.label :"支店コード" %></td>
						<td><%= f.text_field :branch_code, placeholder: "支店コードを入力", class: "col-xs-6" %></td>
						<td><%= f.label :"口座番号" %></td>
						<td><%= f.text_field :account_number, placeholder: "口座番号を入力", class: "col-xs-6" %></td>
					</tr>
					<tr>
						<td><%= f.label :"口座番号 (セイ)" %></td>
						<td><%= f.text_field :account_last_name_kana, placeholder: "口座名義(セイ)を入力", class: "col-xs-6" %></td>
						<td><%= f.label :"口座名義 (メイ)" %></td>
						<td><%= f.text_field :account_first_name_kana, placeholder: "口座名義(メイ)を入力", class: "col-xs-6" %></td>
					</tr>
				</tbody>
			</table>
			<%= f.submit "編集を確定する", class: "btn btn-danger col-xs-4 col-xs-offset-4" %>
			<% end %>
		</div>
	</div>
</div>