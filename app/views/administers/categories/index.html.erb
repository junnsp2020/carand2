<div class="container">
	<div class="row">
		<div class="col-xs-10">
			<h2>カテゴリー</h2>
			<%= form_for [:administers,(@category)] do |f| %>
				<table class="table table-bordered">
					<tbody>
 						<tr>
							<td>
								<%= f.label :カテゴリー, placeholder: "カテゴリー名を入力", autofocus: true, class: "col-xs-4" %>
								<%= f.text_field :name, class: "col-xs-8" %>
								<%= f.submit "保存する", class: "btn btn-primary" %>
							</td>
						</tr>
					</tbody>
				</table>
			<% end %>
			<% @categories.each do |category| %>
				<table class="table table-bordered">
					<tbody>
						<tr>
							<td>
								<%= category.name %>
								<p><%= link_to "編集", edit_administers_category_path(category.id), class: "btn btn-success col-xs-4 col-xs-offset-4" %>
								</p>
							</td>
						</tr>
					</tbody>
				</table>
			<% end %>
		</div>
	</div>
</div>